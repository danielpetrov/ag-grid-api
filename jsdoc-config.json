{
  "tags": {
    "allowUnknownTags": false
  },
  "source": {
    "include": "./dist/"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "template": "./node_modules/docdash",
    "encoding": "utf8",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "readme": "README.md"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "docdash": {
    "static": true,  // Display the static members inside the navbar
    "sort": true     // Sort the methods in the navbar
  }
}
